<p id="notice"><%= notice %></p>

<h1>Fireworks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fireworks.each do |firework| %>
      <tr>
        <td><%= firework.name %></td>
        <td><%= firework.style %></td>
        <td><%= firework.description %></td>
        <td><%= link_to 'Show', firework %></td>
        <td><%= link_to 'Edit', edit_firework_path(firework) %></td>
        <td><%= link_to 'Destroy', firework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

